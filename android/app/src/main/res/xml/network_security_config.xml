<?xml version="1.0" encoding="utf-8"?>
<!--
  Network Security Configuration

  This configuration allows cleartext (HTTP) traffic to the local network server
  for offline mode functionality. The app uses HTTPS for the production API
  but needs HTTP access to the local server at 192.168.10.180.

  Security Notes:
  - Cleartext traffic is ONLY allowed to the specific local IP address
  - All other traffic defaults to secure (HTTPS) connections
  - This does NOT enable cleartext traffic globally
-->
<network-security-config>
    <!-- Base configuration: require HTTPS for all connections by default -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system"/>
        </trust-anchors>
    </base-config>

    <!-- Exception for local network server (offline mode) -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="false">192.168.10.180</domain>
    </domain-config>
</network-security-config>
